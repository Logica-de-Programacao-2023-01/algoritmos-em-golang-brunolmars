package main

import (
	"fmt"
)

func main() {
	var altura, pesoIdeal, pesoAtual float64
	var sexo string

	fmt.Println("Digite a altura em metros:")
	fmt.Scanln(&altura)

	fmt.Println("Digite o sexo (M para masculino ou F para feminino):")
	fmt.Scanln(&sexo)

	if sexo == "M" {
		pesoIdeal = (72.7 * altura) - 58
	} else if sexo == "F" {
		pesoIdeal = (62.1 * altura) - 44.7
	} else {
		fmt.Println("Sexo inv치lido.")
		return
	}

	fmt.Println("Digite o peso atual em quilogramas:")
	fmt.Scanln(&pesoAtual)

	if pesoAtual < pesoIdeal {
		fmt.Println("A pessoa est치 abaixo do peso ideal.")
	} else if pesoAtual > pesoIdeal {
		fmt.Println("A pessoa est치 acima do peso ideal.")
	} else {
		fmt.Println("A pessoa est치 dentro do peso ideal.")
	}
}
