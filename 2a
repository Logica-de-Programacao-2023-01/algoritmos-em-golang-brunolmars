package main

import (
	"fmt"
)

func main() {
	var num1, num2, num3 int

	fmt.Println("Digite o primeiro número:")
	fmt.Scanln(&num1)

	fmt.Println("Digite o segundo número:")
	fmt.Scanln(&num2)

	fmt.Println("Digite o terceiro número:")
	fmt.Scanln(&num3)

	var menor int

	if num1 < num2 && num1 < num3 {
		menor = num1
	} else if num2 < num3 {
		menor = num2
	} else {
		menor = num3
	}

	fmt.Println("O menor número é:", menor)
}
